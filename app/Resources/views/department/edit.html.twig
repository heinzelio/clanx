{% extends 'base_nav.html.twig' %}

{% block title %}
    Ressort bearbeiten
{% endblock %}

{% block workspace %}
<div class="row">
<div class="col-md-4">
<div class="panel panel-default">
    <div class="panel-heading">
        Ressort <mark>„{{ department.name }}“</mark><br />
        <small>vom Event <mark>„{{ event.name }}“</mark></small>
    </div>
    <div class="panel-body">
        {{ form_start(edit_form, {'name': 'form_department_edit'}) }}
            {{ form_widget(edit_form) }}
        {{ form_end(edit_form) }}
    </div>
    <div class="panel-footer">
        <a onclick="formSubmit(form_department_edit,this);"
            class="btn btn-primary"
            data-toggle="tooltip"
            title="Änderungen übernehmen und in der Datenbank speichern.">
            <span class="glyphicon glyphicon-floppy-disk"></span>
            Speichern
        </a>
        <a class="btn btn-default"
            href="{{ path('event_edit',{'id':event.id}) }}"
            data-toggle="tooltip"
            title="Nicht speichern und zurück zu {{event.name}}">
            <span class="glyphicon glyphicon-remove"></span>
            Abbrechen
        </a>
        {{ form_start(delete_form) }}
            <input class="btn btn-danger"
                type="submit"
                value="Delete"
                data-toggle="tooltip"
                title="Dieses Ressort aus der Datenbank löschen.
                (Geht nur, solange keine Hölfer zugewiesen sind.)">
        {{ form_end(delete_form) }}
    </div>
</div><!--panel-->
</div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
{% endblock %}
