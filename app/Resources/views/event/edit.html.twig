{% extends 'base_nav.html.twig' %}

{% block title %} Event bearbeiten {% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/datepicker.js')}}"></script>

    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}

{% block workspace %}
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Event: <mark>{{ event.name }}</mark>
            </div>
            <div class="panel-body">
                {{ form_start(edit_form, {'name': 'form_event_edit'}) }}
                    {{form_widget(edit_form) }}
                {{ form_end(edit_form) }}
            </div>
            <div class="panel-footer">
                <a class="btn btn-primary"
                    onclick="formSubmit(form_event_edit,this);"
                    data-toggle="tooltip"
                    title="Änderungen übernehmen und in der Datenbank speichern.">
                    <span class="fa fa-floppy-o"></span>
                    Speichern
                </a>
                <a class="btn btn-default"
                    href="{{ path('event_show',{'id':event.id}) }}"
                    data-toggle="tooltip"
                    title="Nicht speichern und zurück zur Detailansicht.">
                    <span class="fa fa-times"></span>
                    Abbrechen
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
    <div class="panel panel-default">
        <div class="panel-heading">Ressorts für diesen Event</div>
        <table class="table">
            <tbody>
            {% for department in departments %}
                <tr>
                    <td>
                        {{ department.name }}
                        {% if department.requirement %}
                            <small>({{ department.requirement }})</small>
                        {% endif %}
                        {% if department.chiefUser  %}
                            - {{ department.chiefUser }}
                        {% endif %}
                    </td>
                    <td>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('department_edit', { 'id': department.id }) }}"
                            class="btn btn-default"
                            data-toggle="tooltip"
                            title="Ressortdetails von '{{department.name}}' bearbeiten.">
                            <span class="fa fa-pencil"></span>
                        </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="panel-footer">
            <a class="btn btn-default"
                href="{{ path('department_new',{'event_id' : event.id}) }}"
                data-toggle="tooltip"
                title="Der Buttontext sagt schon alles. Da gibt es nichts
                hinzuzufügen.">
                Neues Ressort anlegen
            </a>
        </div>
    </div><!-- Panel "Departments" -->
    </div>
</div>
{% endblock %}
